<UserControl x:Class="AssistantProcessor.UI.NativeRowUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssistantProcessor.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#222" Height="Auto" x:Name="Root">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="RowNumberText" Foreground="#ccc" FontSize="16" HorizontalAlignment="Right" Grid.Column="0" Margin="8,4" VerticalAlignment="Top">1</TextBlock>
        <TextBlock x:Name="NativeText" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#fff" Grid.Column="1" FontStyle="Italic" FontSize="16" Margin="0,4,4,4">12.3</TextBlock>
    </Grid>
</UserControl>
